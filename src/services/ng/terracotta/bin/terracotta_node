#!/usr/bin/env ruby
# -*- mode: ruby -*-
# Copyright (c) 2009-2011 VMware, Inc.
ENV["BUNDLE_GEMFILE"] ||= File.expand_path("../../Gemfile", __FILE__)
require "bundler/setup"
require "vcap_services_base"

$LOAD_PATH.unshift(File.expand_path("../../lib", __FILE__))
require "terracotta_service/terracotta_node"

class VCAP::Services::Terracotta::NodeBin < VCAP::Services::Base::NodeBin

  def node_class
    VCAP::Services::Terracotta::Node
  end

  def default_config_file
    config_base_dir = ENV["CLOUD_FOUNDRY_CONFIG_PATH"] || File.join(File.dirname(__FILE__), "..", "config")
    File.join(config_base_dir, "terracotta_node.yml")
  end

  def additional_config(options, config)
    options[:config_template] = File.expand_path("../../resources/terracotta.xml.erb", __FILE__)
    options[:command_rename_prefix] = parse_property(config, "command_rename_prefix", String)
    options[:persistent] = parse_property(config, "persistent", Boolean, :optional => true)
    options[:supported_versions] = parse_property(config, "supported_versions", Array)
    options[:default_version] = parse_property(config, "default_version", String)
    options
  end

end

VCAP::Services::Terracotta::NodeBin.new.start
